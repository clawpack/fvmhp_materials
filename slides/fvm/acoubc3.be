\frametitle{Acoustics boundary conditions}


{\blue Solid wall (reflecting) boundary conditions:}
\[
u(a,t) = 0, \qquad u(b,t) = 0.
\]
which can be written in terms of characteristic variables as:
\[
w^2(a,t) = -w^1(a,t), \qquad w^1(b,t) = -w^2(a,t)
\]
since $u = w^1 + w^2$.
\[
q(a,t) = w^1(a,t)\bcm -Z_0\\ 1\ecm + w^2(a,t)\bcm Z_0\\ 1\ecm
\]
\[
\bcm p(a,t)\\ u(a,t)\ecm = \bcm (-w^1(a,t)+w^2(a,t))Z_0\\ 
w^1(a,t)+w^2(a,t) \ecm = \bcm -2w^1(a,t)Z_0\\ 0\ecm.
\]

\end{frame}
