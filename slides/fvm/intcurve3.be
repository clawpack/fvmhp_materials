
\begin{frame}[fragile]
\frametitle{1-wave integral curves of $r^p$}

So
\[
\begin{split}
\tq^1(\xi) &= \xi,\\
\tq^2(\xi) &= \xi u_* + 2\xi\lp\sqrt{gh_*} - \sqrt{g\xi}\rp.
\end{split} 
\]
and hence integral curve through $(h_*,~h_*u_*)$ satisfies
\[
hu = hu_* + 2h\lp\sqrt{gh_*} - \sqrt{gh}\rp \quad\text{for~} 0<h<\infty.
\]

\visible<2->{
\vsp
Similarly, 2-wave integral curve through $(h_*,~h_*u_*)$ satisfies
\[
hu = hu_* - 2h\lp\sqrt{gh_*} - \sqrt{gh}\rp.
\]
}

\end{frame}
